<div class="example example-buttons" style="text-align:center">
    <button type="submit" id="saveBtn" value="save" name="SubmitType" class="btn btn-primary ladda-button" data-style="expand-left" data-plugin="ladda">
        <span class="ladda-label">Save</span>
        <span class="ladda-spinner"></span>
    </button>
</div>


